<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>special://skin/backgrounds/default_bg.jpg</texture>
			<fadetime>400</fadetime>
		</control>
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>background.png</texture>
			<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
		</control>
		<control type="group">
			<control type="group">
				<include>Animation.Common</include>
				<control type="group">
	                <visible>IntegerGreaterThan(Container(450).NumItems,0)</visible>
	                <animation effect="fade" time="320" delay="300">Visible</animation>
	                <control type="image">
	                    <visible>Control.HasFocus(450)</visible>
	                    <left>95</left>
	                    <top>190</top>
	                    <width>330</width>
	                    <height>370</height>
	                    <include>FocusedBackgroundFade</include>
	                    <texture colordiffuse="$VAR[ColorHighlightVar]">listselect_fo.png</texture>
	                    <animation effect="slide" end="0,390" time="300" tween="cubic" easing="inout" condition="Container(450).Row(1)">Conditional</animation>
	                    <animation effect="slide" end="350,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(4)">Conditional</animation>
	                    <animation effect="slide" end="350,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(4) | Container(450).Column(3)">Conditional</animation>
	                    <animation effect="slide" end="350,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(4) | Container(450).Column(3) | Container(450).Column(2)">Conditional</animation>
	                    <animation effect="slide" end="350,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(4) | Container(450).Column(3) | Container(450).Column(2) | Container(450).Column(1)">Conditional</animation>
	                </control>
	            </control>
				<control type="panel" id="450">
					<top>180</top>
	                <left>85</left>
	                <width>1750</width>
	                <height>780</height>
					<onup>450</onup>
	                <ondown>450</ondown>
					<onleft>SetProperty(MediaMenu,True,home)</onleft>
					<onleft>SetFocus(9050)</onleft>
					<onright>60</onright>
					<preloaditems>2</preloaditems>
					<pagecontrol>60</pagecontrol>
					<viewtype label="21371">list</viewtype>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<orientation>vertical</orientation>
					<itemlayout height="390" width="350">
	                    <control type="image">
	                        <left>10</left>
	                        <top>10</top>
	                        <right>10</right>
	                        <bottom>10</bottom>
	                        <texture colordiffuse="33ffffff">background.png</texture>
	                    </control>
	                    <control type="label">
	                        <left>20</left>
	                        <right>20</right>
	                        <top>327</top>
	                        <height>50</height>
	                        <aligny>center</aligny>
	                        <font>font13</font>
	                        <label>$INFO[ListItem.Label]</label>
	                        <textcolor>$VAR[ColorTextVar]</textcolor>
	                        <selectedcolor>$VAR[ColorTextVar]</selectedcolor>
	                    </control>
	                    <control type="image">
	                        <left>20</left>
	                        <top>20</top>
	                        <right>20</right>
	                        <height>310</height>
	                        <texture colordiffuse="55000000">background.png</texture>
	                    </control>
	                    <control type="image">
	                        <left>20</left>
	                        <top>20</top>
	                        <right>20</right>
	                        <height>310</height>
	                        <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
	                        <texture background="true" fallback="DefaultIconFavourite.png">$INFO[ListItem.Icon]</texture>
	                    </control>

	                </itemlayout>
	                <focusedlayout height="390" width="350">
	                    <control type="image">
	                        <left>10</left>
	                        <top>10</top>
	                        <right>10</right>
	                        <bottom>10</bottom>
	                        <texture colordiffuse="33ffffff">background.png</texture>
	                    </control>
	                    <control type="label">
	                        <left>20</left>
	                        <right>20</right>
	                        <top>327</top>
	                        <height>50</height>
	                        <aligny>center</aligny>
	                        <font>font13</font>
	                        <label>$INFO[ListItem.Label]</label>
	                        <selectedcolor>$VAR[ColorTextVar]</selectedcolor>
	                        <textcolor>$VAR[ColorTextVar]</textcolor>
	                    </control>
	                    <control type="image">
	                        <left>20</left>
	                        <top>20</top>
	                        <right>20</right>
	                        <height>310</height>
	                        <texture colordiffuse="55000000">background.png</texture>
	                    </control>
	                    <control type="image">
	                        <left>20</left>
	                        <top>20</top>
	                        <right>20</right>
	                        <height>310</height>
	                        <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
	                        <texture background="true" fallback="DefaultIconFavourite.png">$INFO[ListItem.Icon]</texture>
	                    </control>
	                </focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<visible allowhiddenfocus="true">Control.HasFocus(60) | Container(450).Scrolling</visible>
				<animation effect="fade" time="300" tween="sine" easing="inout" start="0" end="100">Visible</animation>
				<left>1908</left>
				<top>0</top>
				<width>12</width>
				<height>1080</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>450</onleft>
				<onright>450</onright>
				<orientation>vertical</orientation>
			</control>
		</control>
		<include>Topbar</include>
	</controls>
</window>